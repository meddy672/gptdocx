{
  "compilerOptions": {
    "target": "es2022",                                    
    "lib": ["es2022", "ESNext"],                                        
    "module": "commonjs",                                
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,  
    "forceConsistentCasingInFileNames": true, 
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "./dist",                           
    "esModuleInterop": true,                                                                       
    "skipLibCheck": true,                              
    "sourceMap": true, 
    "rootDir": "./src",                                     
    "baseUrl": "./src",                                                        
    "outDir": "./dist", 
    "paths": {
      "@models":   ["./models/models"],
    },                                       
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
