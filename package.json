{
  "name": "gptdocx",
  "version": "1.0.0",
  "description": "Create word documents with ChatGPT.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "nyc jest --runInBand",
    "dev": "git add . && git commit -m \"Automated commit message\"",
    "case": "nyc jest --runInBand ./test/index.test.ts",
    "lint": "eslint ./src/**/*.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && webpack",
    "local": "npm run build && npm link",
    "prepublishOnly": "npm run build"
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "temp-dir": "./coverage/.nyc_output",
    "exclude": [
      "**/*.test.ts",
      "coverage/**"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "keywords": [
    "openai",
    "docx",
    "chatgpt"
  ],
  "author": "meddy672",
  "license": "MIT",
  "dependencies": {
    "docx": "^8.5.0",
    "docxtemplater": "^3.44.0",
    "dotenv": "^16.3.2",
    "openai": "^4.25.0",
    "pizzip": "^3.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack-cli": "^5.1.4"
  }
}
